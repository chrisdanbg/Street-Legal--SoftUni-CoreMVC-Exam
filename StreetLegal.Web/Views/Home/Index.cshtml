@model StreetLegal.ViewModels.HomeViewModels.HomeIndexVM

@{
    ViewData["Title"] = "Home Page";
}
    <div class="container">
        @if (User.Identity.IsAuthenticated && Model.Driver == null)
        {
            <div class="text-center pt-5">
                <h1 class="display-3 text-white animated fadeInUpBig pt-5">Welcome to Street Legal</h1>
                <p class="lead text-white animated fadeInUpBig slow">As a new driver you need a car. Whould you like to get a car now ?</p>
                <a asp-action="Assign" class="btn btn-lg btn-primary animated fadeInUpBig slower">Give me a car!</a>
            </div>
        }
        else
        {
            <div class="pt-5">
                <div class="text-center section-card text-white p-5">
                    <h1 class="display-4">Driver Info</h1>
                    <h2 class="lead pt-2">Your Level is - @Model.Driver.Level</h2>
                    <h2 class="lead pt-2">Your Experience is - @Model.Driver.Experience</h2>
                    <h2 class="lead pt-2">You have @Model.Driver.Money$ available</h2>
                    <h2 class="lead pt-2">Your garage has @(Model.Driver.Garage.Cars != null ? Model.Driver.Garage.Cars.Count : 0 ) cars in it</h2>

                    <a class="btn btn-lg btn-primary mt-5" asp-action="Start" asp-controller="Race">Race</a>
                    <a class="btn btn-lg btn-warning mt-5" asp-action="Index" asp-controller="Upgrade">Upgrade Car</a>
                </div>

            </div>

        }
    </div>


