@model StreetLegal.ViewModels.RaceViewModels.RaceWinVM

@{
    ViewData["Title"] = "LevelUp";
}

    <div class="pt-5">
        <div class="section-card text-white pt-5">
            <div class="login-section-img text-center pt-4">
                <img src="~/svg/level.svg" style="height: 100px;" />
            </div>
            <div class="text-center pb-5">
                <h1 class="display-3">Congratulations! You've leveled up!</h1>
                <h2 class="lead">You are now level: @Model.Level</h2>
                <hr />
                <h1 class="lead font-weight-bold">And You've also won the last race!</h1>
                <h2 class="lead">You've earned @Model.ExperienceEarned experience points</h2>
                <h2 class="lead">You've added @Model.MoneyEarned$ to your account</h2>


                <a class="btn btn-primary btn-lg mt-5" asp-action="Start">Race Again</a>
                <a class="btn btn-danger btn-lg mt-5" asp-action="Index" asp-controller="Home">Home</a>
            </div>
        </div>
    </div>