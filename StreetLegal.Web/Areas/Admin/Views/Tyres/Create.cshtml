@model StreetLegal.ViewModels.AdminViewModels.CreateTyresVM

@{
    ViewData["Title"] = "Create New Tyres";
}

<div class="text-center p-5">
    <h2 class="display-4">Create New Tyres</h2>
    <div class="text-left">
        <div class="text-left">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" type="text" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Health" class="control-label">Health Points <span class="text-danger">*</span></label>
                    <input asp-for="Health" type="number" class="form-control" required />
                    <span asp-validation-for="Health" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TyreType" class="control-label">Tyre Type <span class="text-danger">*</span></label>
                    <select class="form-control" asp-for="TyreType" asp-items="Html.GetEnumSelectList<StreetLegal.Models.Enums.TyreType>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="TyreType" class="text-danger" />
                </div>
                <div class="form-group mb-2">
                    <input type="submit" value="Create" class="btn btn-primary text-light float-left" />
                </div>
            </form>
            <label class="float-right mt-2">Fields marked with <span class="text-danger">*</span> are required!</label>
        </div>
    </div>
</div>