@model  StreetLegal.ViewModels.GarageViewModels.GarageIndexVM
@{
    ViewData["Title"] = "Index";
}

    <div class="text-center mb-5">
        <h1>Welcome to your garage</h1>
        <h5>You currently have @Model.CarsCount cars in it. Check them out:</h5>
    </div>

    <div class="container">
        <div class="row justify-content-around">
            @foreach (var item in Model.Cars)
            {
                <div class="card mr-2" style="width: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Make</h5>
                        <h5 class="card-title">Year of production: @item.Year</h5>
                        <p class="card-text">Max Speed: @item.Engine.MaxSpeed</p>
                        <p class="card-text">Max Speed: @item.Engine.HP</p>
                        <a href="#" class="btn btn-primary">Make Main</a>
                        <a asp-controller="Upgrade" asp-action="Car" asp-route-id="@item.Id" class="btn btn-warning">Upgrade</a>
                        <a asp-controller="Shop" asp-action="Sell" asp-route-id="@item.Id" class="btn btn-danger">Sell</a>
                    </div>
                </div>
            }
        </div>
        
    </div>


